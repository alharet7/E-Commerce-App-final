@model E_Commerce_App.Models.DTOs.LoginDTO

<div id="welcomeAlert" class="alert alert-success alert-dismissible fade show p-2 m-2" role="alert" style="font-size: 35px;">
    <p class="m-0">
        Welcome,
        @if (Model != null)
        {
            <span class="fw-bold"> @Model.UserName!</span>
        }
        else
        {
            <span>Please Login To See All features</span>
        }
    </p>
    
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        setTimeout(function () {
            var alertElement = document.getElementById('welcomeAlert');
            alertElement.style.transition = 'opacity 1.75s';
            alertElement.style.opacity = '0';
            setTimeout(function () {
                alertElement.style.display = 'none';
            }, 1700);
        }, 5000); // Hide the alert after 5 seconds
    });
</script>
