@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <a class="nav-link btn btn-outline-danger text-black custom-animation-logout" asp-area="" asp-controller="Auth" asp-action="LogOut">Logout</a>
}
else
{
    <a class="nav-link btn btn-outline-success text-black custom-animation-login" asp-area="" asp-controller="Auth" asp-action="Index">Login</a>
}
