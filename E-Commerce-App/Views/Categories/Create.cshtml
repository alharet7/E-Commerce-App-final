@model E_Commerce_App.Models.Category

@{
    ViewData["Title"] = "Create";
}




<div class="d-flex justify-content-center align-items-center h-100 my-4">
    <div class="card p-1 text-black" style="width: 400px;">
        <div class="card-body">
            <h4>Create Category</h4>
            <hr />
            <form method="post" asp-controller="Categories" asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label  fs-3"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="file">Upload Image:</label>
                    <input type="file" id="file" name="file" class="form-control text-primary">
                </div>
                <div class="form-group text-center m-3">
                    <input type="submit" value="Create" class="btn btn-success m-3" />
                    <a asp-action="Index" class="btn btn-primary m-3">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
