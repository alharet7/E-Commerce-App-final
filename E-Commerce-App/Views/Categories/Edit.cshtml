@model E_Commerce_App.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center h-100 my-4">
    <div class="card p-1 text-black" style="width: 400px;">
        <div class="card-body">
            <h4>Edit Category</h4>
            <hr />
            <img src="@Model.imgURL" alt="Category Image" style="width: 250px;" />
            <form method="post" asp-controller="Categories" asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <div class="form-group  fs-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="file">Upload Image:</label>
                    <input type="file" id="file" name="file" class="form-control text-primary">
                </div>
                <div class="form-group text-center m-3">
                    <input type="submit" value="Save" class="btn btn-success m-1" />
                    <a asp-action="Index" class="btn btn-primary m-1">Back to List</a>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
