@model E_Commerce_App.Models.Product

@{
    ViewData["Title"] = "Edit";
}


<div class="d-flex justify-content-center align-items-center h-100">
    <div class="card text-dark" style="width: 400px;">
        <div class="card-body">
            <h4>Edit Product</h4>
            <hr />
            <img src="@Model.ProductImage" alt="Product Image" style="width: 250px;" />
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label fw-bold"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group m-1">
                    <label asp-for="Name" class="control-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-1">
                    <label asp-for="Description" class="control-label fw-bold"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group m-1">
                    <label asp-for="Price" class="control-label fw-bold"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group m-1">
                    <label asp-for="StockQuantity" class="control-label fw-bold"></label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="file">Upload Image:</label>
                    <input type="file" id="file" name="file" class="form-control text-primary">
                </div>
                <div class="form-group text-center m-3">
                    <input type="submit" value="Save" class="btn btn-success m-1" />
                    <a asp-action="Index" class="btn btn-primary m-1">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
