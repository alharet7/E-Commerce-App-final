@page
@model E_Commerce_App.Pages.SignUpModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-70">
            <div class="col-lg-10 col-xl-8 my-2">
                <div class="card text-black my-5 p-2" style="border-radius: 25px;">
                    <div class="card-body p-md-2">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                                <form method="post">
                                    <div class="form-group">
                                        <label for="UserName">Username</label>
                                        <input asp-for="Register.UserName" class="form-control" />
                                        <span asp-validation-for="Register.UserName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="Email">Email</label>
                                        <input asp-for="Register.Email" type="email" class="form-control" />
                                        <span asp-validation-for="Register.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Password">Password</label>
                                        <input asp-for="Register.Password" type="password" class="form-control" />
                                        <span asp-validation-for="Register.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label for="PhoneNumber">PhoneNumber</label>
                                        <input asp-for="Register.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="Register.PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-group my-2">
                                        <label> Select Role:</label>
                                        <label for="UserRole"> Administrator</label>
                                        <input asp-for="UserRole" type="radio" value="Administrator" />
                                        <label for="UserRole">Editor</label>
                                        <input asp-for="UserRole" type="radio" value="Editor" />
                                    </div>

                                    <button type="submit" class="btn btn-primary">Sign Up</button>
                                </form>
                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 rounded-3">
                                <div class="position-relative rounded-3" style="max-width: 450px;">
                                    <img src="https://img.freepik.com/free-vector/sign-up-concept-illustration_114360-7965.jpg?w=740&t=st=1694417199~exp=1694417799~hmac=fdbfbca57a93e9f1db638b39501664154480aa780aabeb47a1cfd8298dfee539"
                                         class="img-fluid rounded-3" alt="Sample image" style="width: 100%;">
                                    <div class="overlay"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("form").on("submit", function (event) {
            setTimeout(function () {
                window.location.href = '/Home/Index';
            }, 1000);
        });
    });
</script>
